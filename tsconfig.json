{
  "compilerOptions": {
    "module": "esnext",
    "outDir": "dist/mjs",
    "target": "es2020",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "declaration": true,
    "esModuleInterop": true,
    "inlineSourceMap": false,
    "lib": ["esnext"],
    "listEmittedFiles": false,
    "listFiles": false,
    "moduleResolution": "node16",
    "noFallthroughCasesInSwitch": true,
    "pretty": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": true,
    "typeRoots": ["node_modules/@types"]
  },
  "compileOnSave": false,
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*", "node_modules/vitest/dist/index.d.ts"]
}
